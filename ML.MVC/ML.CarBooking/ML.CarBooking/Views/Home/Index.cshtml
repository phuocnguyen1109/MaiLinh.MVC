@{
    ViewBag.Title = "Mai Linh Car Booking";
    Layout = null;

    @model ML.Entities.ResponseModels.Hr.UserClaimsModel
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .department :hover {
            background-color: lightgrey;
            cursor: pointer;
        }
    </style>

    <title>Mai Linh v1.0.2-Beta</title>

</head>
<body ng-app="mainApp">
    <!-- Page Wrapper -->
    <div ng-controller="mainController as vm" id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav ml-bg-dark sidebar sidebar-dark accordion" id="accordionSidebar">
            <li>
                <div class="mb-5"></div>
            </li>
            <!-- Sidebar - Brand -->
            <li ng-click="vm.goMainPage()">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" ui-sref="dashboard">
                    <div class="sidebar-brand-text mx-3">
                        <img src="~/Content/Images/Logo_MLXCT.jpg" style="width:80%">
                    </div>
                </a>
            </li>

            <!-- Divider -->
            @*<hr class="sidebar-divider my-0">*@

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active" style="margin-top: 10%;">
                <a class="nav-link txt-center" ui-sref="dashboard">
                    @*<i class="fas fa-fw fa-tachometer-alt"></i>*@
                    <span>CÔNG TY TNHH XE CHO THUÊ MAI LINH</span>
                </a>
                <!-- Divider -->
                <hr class="sidebar-divider">
            </li>

            <!-- Nav Item - Pages Collapse Menu -->
            <li ng-if="vm.userClaims.DepartmentId == -1" class="nav-item">
                <div class="sidebar-heading">
                    HỆ THỐNG
                </div>
            </li>
            <li ng-if="vm.userClaims.DepartmentId == -1" class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#National" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-clipboard-list"></i>
                    <span>Quản Lý Danh Mục</span>
                </a>
                <div id="National" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" ng-click="vm.gotoNationalManagement()">Quốc Gia / Tỉnh Thành</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" ng-click="">Quản Lý Master Data</a>
                    </div>
                </div>
            </li>
            <li ng-if="vm.userClaims.DepartmentId == -1" class="nav-item">
                <a class="nav-link" ng-click="vm.gotoAccountManagement()">
                    <i class="fas fa-fw fa-users-cog"></i>
                    <span>Quản Lý Accounts</span>
                </a>
            </li>
            <li ng-if="vm.userClaims.DepartmentId == -1" class="nav-item">
                <a class="nav-link" ng-click="gotoPermission()">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Quản Lý Phân Quyền</span>
                </a>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading">
                    Chức Năng
                </div>
            </li>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePagesHR" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-user-tie"></i>
                    <span>Nhân Sự</span>
                </a>
                <div ng-if="vm.userClaims.DepartmentId == -1 || vm.userClaims.DepartmentId == 1" id="collapsePagesHR" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" ng-click="vm.gotoEmployees()">Hồ Sơ Lái Xe</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" ng-click="vm.gotoEmployees()">Tính Lương Lái Xe</a>
                    </div>
                </div>
            </li>


            <li ng-if="vm.userClaims.DepartmentId == -1 || vm.userClaims.DepartmentId == 4" class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapseExecute" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-user-tie"></i>
                    <span>Điều Hành - Kinh Doanh</span>
                </a>
                <div id="collapseExecute" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Hồ Sơ Khách Hàng</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Book Lệnh</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Chấm Công Lái Xe</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Đánh Giá Lái Xe</a>
                    </div>
                </div>
            </li>

            <li ng-if="vm.userClaims.DepartmentId == -1 || vm.userClaims.DepartmentId == 2" class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapseAccountance" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-user-tie"></i>
                    <span>Kế Toán</span>
                </a>
                <div id="collapseAccountance" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Cập Nhật Lịch Trình</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Nhập Giá Nhiên Liệu</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Tổng Hợp Doanh Thu</a>
                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Công Nợ Khách Hàng</a>
                    </div>
                </div>
            </li>

            <li ng-if="vm.userClaims.DepartmentId == -1 || vm.userClaims.DepartmentId == 3" class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePagesTECH" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-tools"></i>
                    <span>Kỹ Thuật - An Toàn</span>
                </a>
                <div id="collapsePagesTECH" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" ng-click="vm.gotoVehicleManagement()">Hồ Sơ Phương Tiện</a>

                    </div>
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item">Cập Nhật Nhiên Liệu</a>

                    </div>
                </div>
            </li>



        </ul>
        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">


                        <li class="nav-item txt-center">
                            <div class="mt-3 topbar-divider d-none d-sm-block"></div>
                            @*<i class="fas fa-fw fa-bell ico-only"></i>*@
                        </li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @*<img class="img-profile rounded-circle" src="Content/Images/avatar.jpg">*@
                                <div class="ml-2">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{vm.userClaims.Name}}</span> <br />
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{vm.userClaims.RoleName}}</span>
                                </div>
                                @*<i class="fas fa-sign-out-alt fa-sm fa-fw  ico-only"></i>*@
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Thông Tin Cá Nhân
                                </a>
                                <a class="dropdown-item">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đổi Mật Khẩu
                                </a>
                                <a class="dropdown-item">
                                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Xem Log Cá Nhân
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đăng Xuất
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div ui-view class="container-fluid" ng-class="vm.isMainPage? 'showBg': 'hiddenBg'">
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bạn muốn thoát khỏi hệ thống ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Nhấn vào <b>Đăng Xuất</b> để thoát</div>
                <div class="modal-footer">
                    <button class="btn btn-outline-danger" type="button" data-dismiss="modal">Hủy Bỏ</button>
                    <button type="button" class="btn btn-outline-info" value="Đăng Xuất" onclick="location.href='@Url.Action("Logout", "Home")'">Đăng Xuất</button>

                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        const UserClaims = {
            UserId: '@Model.Id',
            Name: '@Model.FullName',
            DepartmentId: '@Model.DepartmentId',
            RoleId: '@Model.RoleId'
        };
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularJS")
    @Scripts.Render("~/bundles/CustomScripts")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.0.4/ng-file-upload-shim.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.0.4/ng-file-upload.js"></script>
    <script src="~/Scripts/angular-pubsub.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/AngularModules/Enums.js"></script>

    <script type="text/javascript" src="~/AngularModules/MainApp.js"></script>
    <script type="text/javascript" src="~/AngularModules/mainApp.routes.js"></script>


    <script type="text/javascript" src="~/AngularModules/Utilities.js"></script>
    <script type="text/javascript" src="~/AngularModules/Directives/CurrencyDirective.js"></script>
    <script type="text/javascript" src="~/AngularModules/Directives/DatePickerDirective.js"></script>


    <script type="text/javascript" src="~/AngularModules/HrModules/employeesController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/editEmployeeController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/healthCheckManagementController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/workingHistoriesController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/educationController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/equipmentController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/marriageController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/employeeInfoController.js"></script>

    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/Sub-Tab-employeeInfo/PhoneNumberSubTabController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/Sub-Tab-employeeInfo/identificationCardSubTabController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/Sub-Tab-employeeInfo/contractSubTabController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/Sub-Tab-employeeInfo/quitJobHistoriesController.js"></script>

    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/PersonInsurances/bankAccountController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/PersonInsurances/lifeInsuranceController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/PersonInsurances/dependentController.js"></script>
    <script type="text/javascript" src="~/AngularModules/HrModules/Templates/PersonInsurances/healthInsuranceController.js"></script>


    <script type="text/javascript" src="~/AngularModules/Vehicle/vehicleManagementController.js"></script>
    <script type="text/javascript" src="~/AngularModules/Vehicle/editVehicleController.js"></script>
    <script type="text/javascript" src="~/AngularModules/Administration/masterDataManagementController.js"></script>
    <script type="text/javascript" src="~/AngularModules/Administration/accountManagementController.js"></script>

    <script type="text/javascript" src="~/AngularModules/Administration/nationalManagementController.js"></script>
    <script type="text/javascript" src="~/AngularModules/Administration/NationalModalController.js"></script>


</body>
</html>
